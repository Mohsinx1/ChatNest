@model ChatNest.Models.ViewModels.vmLogin
@{
    ViewBag.Title = "Login";
    Layout = "_LoginLayout";
}

<style>
    body {
        background-color: #f0f2f5;
        color: #333;
        min-height: 100vh;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .login-container:hover {
            transform: scale(1.01);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

    .form-control {
        background-color: #fff;
        border: 1px solid #ccc;
        color: #333;
    }

        .form-control:focus {
            background-color: #fff;
            color: #000;
            border-color: #007bff;
            box-shadow: 0 0 6px rgba(0, 123, 255, 0.5);
        }

    label {
        color: #555;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
        font-weight: 600;
        transition: background 0.3s, box-shadow 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.4);
        }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            color: #0056b3;
            text-decoration: underline;
        }
</style>

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="login-container w-100" style="max-width: 420px;">
        <h2 class="mb-4 text-center">Login to ChatNest</h2>

        <form asp-action="Login" method="post" novalidate>
            <div class="form-group mb-3">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-action="Register">Don’t have an account? Register</a>
        </div>
    </div>
</div>
